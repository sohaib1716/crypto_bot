<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".select_bot">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerInside"
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/ff3"
                />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/details"
                android:layout_below="@+id/img"
                android:layout_margin="14dp"
                android:background="@drawable/relative_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/bitcoin"
                        />

                    <LinearLayout
                        android:id="@+id/btc"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:fontFamily="@font/averia_sans_libre_bold"
                            android:textStyle="bold"
                            android:textColor="#777474"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CURRENT PRICE"
                            />

                        <TextView
                            android:maxLength="8"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/averia_sans_libre_bold"
                            android:textColor="@color/black"
                            android:id="@+id/btcprice"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24000"
                            android:textSize="20dp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"/>

                <LinearLayout
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/money"
                        />

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:id="@+id/usdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/averia_sans_libre_bold"
                            android:text="USDT"
                            android:textColor="#777474"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:maxLength="6"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/averia_sans_libre_bold"
                            android:textColor="@color/black"
                            android:id="@+id/usdtprice"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24000"
                            android:textSize="20dp"
                            />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RelativeLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg"
                android:id="@+id/bot1"
                android:layout_below="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <TextView
                    android:fontFamily="@font/averia_sans_libre_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRYPTO BOT-1"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/bot_Text_color"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bot2"
                    />


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg"
                android:id="@+id/bot2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/bot1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <TextView
                    android:fontFamily="@font/averia_sans_libre_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRYPTO BOT-2"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/bot_Text_color"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bot1"
                    />

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg"
                android:id="@+id/bot3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/bot2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <TextView
                    android:fontFamily="@font/averia_sans_libre_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRYPTO BOT-3"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/bot_Text_color"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bot3"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>